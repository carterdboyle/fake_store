<div
  class="fixed z-50 top-15 left-1/2 -translate-x-1/2 sm:left-auto sm:right-4 sm:translate-x-0 w-[min(92vw,36rem)] space-y-3"
  data-turbo-temporary
>
  <% flash.each do |type, message| %>
    <% styles =
        case type.to_sym
        when :notice, :info
          { box: "bg-blue-50 border-blue-200 text-blue-900",  btn: "hover:bg-blue-100 focus:ring-blue-500",  icon: :info }
        when :success
          { box: "bg-green-50 border-green-200 text-green-900", btn: "hover:bg-green-100 focus:ring-green-500", icon: :check }
        when :alert, :warning
          { box: "bg-yellow-50 border-yellow-200 text-yellow-900", btn: "hover:bg-yellow-100 focus:ring-yellow-500", icon: :warn }
        else # :error, :danger, etc.
          { box: "bg-red-50 border-red-200 text-red-900",     btn: "hover:bg-red-100 focus:ring-red-500",     icon: :error }
        end %>

    <div
      data-controller="flash"
      data-flash-dismiss-after-value="5000"
      class="opacity-0 translate-y-1 transition-all duration-200 pointer-events-auto"
      role="alert"
      aria-live="assertive"
    >
      <div class="rounded-xl border p-4 shadow-lg <%= styles[:box] %>">
        <div class="flex items-start gap-3">
          <div class="shrink-0 mt-0.5">
            <%# Simple inline icons %>
            <% if styles[:icon] == :check %>
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-5 w-5">
                <path stroke-linecap="round" stroke-linejoin="round" d="m11.25 11.25.041-.02a.75.75 0 0 1 1.063.852l-.708 2.836a.75.75 0 0 0 1.063.853l.041-.021M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9-3.75h.008v.008H12V8.25Z" />
              </svg>
            <% elsif styles[:icon] == :warn %>
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-5 w-5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126ZM12 15.75h.007v.008H12v-.008Z" />
              </svg>
            <% elsif styles[:icon] == :error %>
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m9-.75a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9 3.75h.008v.008H12v-.008Z" />
              </svg>
            <% else %>
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="m11.25 11.25.041-.02a.75.75 0 0 1 1.063.852l-.708 2.836a.75.75 0 0 0 1.063.853l.041-.021M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9-3.75h.008v.008H12V8.25Z" />
              </svg>
            <% end %>
          </div>

          <div class="flex-1">
            <p class="font-medium"><%= message %></p>
          </div>

          <button
            type="button"
            data-action="flash#close"
            class="rounded-md p-1.5 focus:outline-none focus:ring-2 <%= styles[:btn] %>"
            aria-label="Dismiss notification"
          >
            <svg class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M6 18L18 6M6 6l12 12"/>
            </svg>
          </button>
        </div>
      </div>
    </div>
  <% end %>
</div>
