<div class="grow">
  <h1 class="text-3xl font-light mb-6">My Orders</h1>

  <% if @orders.any? %>
    <table class="min-w-full border border-gray-300 rounded-lg">
      <thead class="bg-gray-100">
        <tr>
          <th class="text-left px-4 py-2">Order #</th>
          <th class="text-left px-4 py-2">Placed At</th>
          <th class="text-right px-4 py-2">Total</th>
          <th class="text-center px-4 py-2">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr class="border-t">
            <td class="px-4 py-2"><%= order.public_id %></td>
            <td class="px-4 py-2"><%= order.placed_at&.strftime("%b %d, %Y %H:%M") %></td>
            <td class="px-4 py-2 text-right">$<%= number_with_precision order.total, precision: 2 %></td>
            <td class="px-4 py-2 text-center">
              <%= link_to "View", order_path(order.public_id),
                          class: "text-blue-600 hover:underline" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>You have not placed any orders yet.</p>
  <% end %>
</div>
